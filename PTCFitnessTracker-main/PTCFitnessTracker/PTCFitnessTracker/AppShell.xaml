<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PTCFitnessTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PTCFitnessTracker"
    xmlns:views="clr-namespace:PTCFitnessTracker.Views"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="ptc.png"/>

        <ShellContent
            Title="Entry Hall"
            ContentTemplate="{DataTemplate views:EntryHall}"
            Icon="dumbbellicon.png"/>

        <ShellContent
            Title="Bedroom 1"
            ContentTemplate="{DataTemplate views:Bedroom1}"
            Icon="one.png"/>
    </FlyoutItem>

</Shell>
